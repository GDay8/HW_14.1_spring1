<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">


    <changeSet id="9" author="IvanD">
        <createTable tableName="cats">
            <column name="cat_id" type="INT">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(256)">
                <constraints nullable="false"/>
            </column>
            <column name="fact" type="VARCHAR(256)">
                <constraints nullable="false"/>
            </column>
            <column name="lenght" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="student_id" type="INT">
                <constraints nullable="false" foreignKeyName="FK_cats_students" references="students(student_id)"/>
            </column>
        </createTable>

    </changeSet>


</databaseChangeLog>